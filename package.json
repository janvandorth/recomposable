  },
  "author": "Jan van Dorth",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "typescript": "^5.7",
    "vitest": "^3.0"
  }
}

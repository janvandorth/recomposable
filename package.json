{
  "name": "recomposable",
  "version": "1.1.4",
  "description": "Docker Compose TUI manager with vim keybindings â€” monitor, restart, rebuild, and tail logs for your services",
  "main": "dist/index.js",
  "bin": {
    "recomposable": "./dist/index.js"
  },
  "files": [
    "dist/",
    "screenshots/"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
